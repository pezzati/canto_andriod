<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorPrimaryDark">#242529</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/yekan_regular</item>

        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.BackBtn" parent="AppTheme">
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.SecondaryText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="AppTheme.ClickableBorderless" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Clickable" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="AppTheme.ClickableForeground" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.ClickableText" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>
</resources>
